{
    "manifest_version": 3,
    "name": "Aesthetify",
    "version": "1.0",
    "description": "Toggle between a beautified reading mode and the original webpage.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Aesthetify!",
      "default_icon": {
        "16": "icons/i1.png",
        "48": "icons/i2.png",
        "128": "icons/i3.png"
      }
    },
    "icons": {
      "16": "icons/i1.png",
      "48": "icons/i2.png",
      "128": "icons/i3.png"
    }
  }
  
{
  "name": "Unread Gmail Notifier",
  "description": "Shows unread emails from multiple Gmail accounts.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "identity"
  ],
  "icons": {
    "16": "icons/i1.png",
    "48": "icons/i2.png",
    "128": "icons/i3.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
